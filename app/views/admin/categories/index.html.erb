<header class="page-header">
  <h1>Admin &raquo; Categories</h1>
</header>

<div class="card-footer text-muted">
  <%= link_to 'Back To Dashboard', admin_root_path, class: 'btn btn-primary' %>
  <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
</div>

<div class="panel panel-default categories">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product Category</th>
        <th># Of Products In Category</th>
      </tr>
    </thead>
    <tbody>
    <%= render @categories %>
    </tbody>
  </table>

</div>